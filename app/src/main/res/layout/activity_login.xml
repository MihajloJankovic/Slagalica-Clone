<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:theme="@android:style/Theme.Dialog"
    >

    <LinearLayout
        android:id="@+id/popUpLayout"
        android:layout_width="350dp"
        android:layout_height="540dp"
        android:layout_gravity="center"
        android:background="@drawable/rating_border_no_stroke"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/upperBarLayout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginHorizontal="7dp"
            android:layout_marginTop="7dp"
            android:gravity="end"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/closeButtonLayout"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:background="@drawable/close_button_clicked">

                <RelativeLayout
                    android:id="@+id/closeButton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:background="@drawable/close_button_clicked">
                    <ImageView
                        android:id="@+id/closeButtonLogo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/close_button">
                    </ImageView>
                </RelativeLayout>

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/popUpLayoutMiddle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/popUpText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/quiz_font"
                android:text="Sign in to your account"
                android:textAlignment="center"
                android:textColor="#046AB8"
                android:textSize="25dp"></TextView>

            <RelativeLayout
                android:id="@+id/popUpAvatarLayout"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:gravity="center">

                <RelativeLayout
                    android:id="@+id/popUpAvatar"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/brainster_logo"></RelativeLayout>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/formLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/usernameLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/usernameLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/quiz_font"
                        android:text="Email address or username"
                        android:textColor="#046AB8"
                        android:textSize="17dp"></TextView>

                    <EditText
                        android:id="@+id/usernameTxt"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/text_box"
                        android:hint="Enter username or email"
                        android:paddingLeft="7dp"
                        android:textColor="@color/black"
                        android:textColorHint="#A5A5A5"
                        tools:ignore="TouchTargetSizeCheck"></EditText>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/passwordLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/passwordLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/quiz_font"
                        android:text="Password"
                        android:textColor="#046AB8"
                        android:textSize="17dp"></TextView>

                    <EditText
                        android:id="@+id/passwordTxt"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/text_box"
                        android:hint="Enter password"
                        android:inputType="textPassword"
                        android:paddingLeft="7dp"
                        android:textColor="@color/black"
                        android:textColorHint="#A5A5A5"
                        tools:ignore="TouchTargetSizeCheck"></EditText>

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/popUpLayoutMiddleLower"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/loginButtonLayout"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_centerInParent="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/click_start_button">

                    <Button
                        android:id="@+id/loginButton"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#00000000"
                        android:clickable="true"
                        android:fontFamily="@font/quiz_font"
                        android:onClick="login"
                        android:text="Log in"
                        android:textColor="@color/white"
                        android:textSize="25dp" />
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/popUpLowerLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/questionTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/quiz_font"
                android:text="Haven't an account?"
                android:textColor="#046AB8"
                android:textSize="18dp"></TextView>

            <RelativeLayout
                android:id="@+id/signUpLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="end">

                <TextView
                    android:id="@+id/signUp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/quiz_font"
                    android:linksClickable="true"
                    android:text="Sign Up!"
                    android:clickable="true"
                    android:textColor="@color/purple_700"
                    android:textSize="18dp"></TextView>
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>