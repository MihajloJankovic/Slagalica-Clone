<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:theme="@android:style/Theme.Dialog"
    >

    <LinearLayout
        android:id="@+id/popUpLayout"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:layout_gravity="center"
        android:background="@drawable/rating_border_no_stroke"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/upperBarLayout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginHorizontal="7dp"
            android:layout_marginTop="7dp"
            android:gravity="end"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/closeButtonLayout"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:background="@drawable/close_button_clicked">

                <RelativeLayout
                    android:id="@+id/closeButton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/close_button_clicked"
                    android:clickable="true"
                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck">

                    <ImageView
                        android:id="@+id/closeButtonLogo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/close_button"></ImageView>
                </RelativeLayout>

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/popUpLayoutMiddle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/popUpText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/quiz_font"
                android:text="My profile"
                android:textAlignment="center"
                android:textColor="#046AB8"
                android:textSize="25dp"></TextView>

            <RelativeLayout
                android:id="@+id/popUpAvatarLayout"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="15dp"
                android:gravity="center">

                <RelativeLayout
                    android:id="@+id/popUpAvatarBorder"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/avatar_border">

                    <RelativeLayout
                        android:id="@+id/popUpAvatar"
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/user_avatar">
                        <RelativeLayout
                            android:id="@+id/editProfilePictureLayout"
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:background="@drawable/edit_profile_button_click"
                            android:padding="10dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true">

                            <ImageButton
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:clickable="true"
                                android:background="@drawable/edit_pen"
                                tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck"></ImageButton>

                        </RelativeLayout>

                    </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/formLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/playerInfoLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/usernameRowLayout"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:orientation="horizontal"
                        android:padding="5dp"
                        android:layout_marginBottom="10dp"
                        android:gravity="center"
                        android:background="@drawable/player_info_layout_border">
                        <TextView
                            android:id="@+id/usernameLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Username:"
                            android:fontFamily="@font/quiz_font"
                            android:gravity="center"
                            android:textSize="18dp">
                        </TextView>
                        <TextView
                            android:id="@+id/usernameInfo"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Petar"
                            android:layout_marginLeft="5dp"
                            android:fontFamily="@font/quiz_font"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textSize="18dp">
                        </TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/emailRowLayout"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:orientation="horizontal"
                        android:padding="5dp"
                        android:gravity="center"
                        android:background="@drawable/player_info_layout_border">
                        <TextView
                            android:id="@+id/emailLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="E-mail:"
                            android:fontFamily="@font/quiz_font"
                            android:gravity="center"
                            android:textSize="16dp">
                        </TextView>
                        <TextView
                            android:id="@+id/emailInfo"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="pera.peric@gmail.com"
                            android:layout_marginLeft="5dp"
                            android:textColor="@color/white"
                            android:fontFamily="@font/quiz_font"
                            android:gravity="center"
                            android:textSize="16dp">
                        </TextView>
                    </LinearLayout>
                </LinearLayout>



            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/popUpLayoutMiddleLower"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/loginButtonLayout"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_centerInParent="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/click_start_button"
                    android:id="@+id/loginButton"
                    android:clickable="true">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Statistics"
                        android:textColor="@color/white"
                        android:textSize="25dp"
                        android:fontFamily="@font/quiz_font"
                        android:gravity="center">
                    </TextView>
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>