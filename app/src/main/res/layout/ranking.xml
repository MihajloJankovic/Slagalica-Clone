<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:theme="@android:style/Theme.Dialog"

    >

    <LinearLayout
        android:id="@+id/popUpLayout"
        android:layout_width="350dp"
        android:layout_height="700dp"
        android:layout_gravity="center"
        android:background="@drawable/guessing_part_back"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/upperBarLayout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginHorizontal="7dp"
            android:layout_marginTop="7dp"
            android:gravity="end"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/closeButtonLayout"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:background="@drawable/close_button_clicked">

                <RelativeLayout
                    android:id="@+id/closeButton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:background="@drawable/close_button_clicked"
                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck">
                    <ImageView
                        android:id="@+id/closeButtonLogo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/close_button">
                    </ImageView>
                </RelativeLayout>

            </RelativeLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="5dp">
            <TextView
                android:id="@+id/popUpText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/quiz_font"
                android:text="Ranking"
                android:textAlignment="center"
                android:textColor="#046AB8"
                android:textSize="25dp"></TextView>


        </RelativeLayout>

        <LinearLayout
            android:id="@+id/rankingChooseLayout"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal">
            <RelativeLayout
                android:id="@+id/rankingWeeklyLayout"
                android:layout_width="160dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:background="@drawable/operations_clicked"
                android:layout_gravity="start">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/quiz_font"
                    android:text="Weekly ranking"
                    android:gravity="center"
                    android:textSize="20dp">
                </TextView>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rankingMonthlyLayout"
                android:layout_width="160dp"
                android:layout_marginLeft="10dp"
                android:layout_height="match_parent"
                android:background="@drawable/operations_clicked">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/quiz_font"
                    android:text="Monthly ranking"
                    android:gravity="center"
                    android:textSize="20dp">
                </TextView>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/scrollContainerLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#60A5DA">

            <ScrollView
                android:id="@+id/scrollContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/peopleList"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/peopleLayout"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:background="@drawable/rating_border_gradient"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/peopleNumber"
                            android:layout_width="70dp"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/quiz_font"
                            android:text="1."
                            android:textColor="@color/purple_700"
                            android:gravity="center"
                            android:textSize="20dp">
                        </TextView>
                        <TextView
                            android:id="@+id/peopleName"
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/quiz_font"
                            android:text="Beska"
                            android:textColor="@color/purple_700"
                            android:gravity="center_vertical"
                            android:textSize="20dp">
                        </TextView>
                        <TextView
                            android:id="@+id/peopleStars"
                            android:layout_width="70dp"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/quiz_font"
                            android:background=""
                            android:textColor="@color/purple_700"
                            android:gravity="center_vertical"
                            android:textSize="20dp">
                        </TextView>

                    </LinearLayout>



                </LinearLayout>

            </ScrollView>
        </LinearLayout>






    </LinearLayout>

</LinearLayout>